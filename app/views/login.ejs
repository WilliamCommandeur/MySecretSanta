<%- include ('partials/header') %>

<form action="/login" method="POST" class="flex flex-col items-center  w-full sm:w-2/3 lg:w-1/3 bg-zinc-200 justify-around rounded-md overflow-auto">

    <% if (locals.error) { %>
        <div class="bg-red-200 border-2 border-red-500 p-3">
            <p class="text-red-500"><%= error %></p>
        </div>
    <% } %>
    <div>
    <fieldset class="flex flex-col">
        <label for="email">Email</label>
        <input class="w-60 p-1 mt-1" type="email" name="email" placeholder="email@domaine.com">
    </fieldset>

    <fieldset class="flex flex-col mt-2">
        <label for="password">Mot de passe</label>
        <input class="w-60 p-1 mt-1" type="password" name="password" placeholder="********">
    </fieldset>
    </div>
    <input class="bg-lime-300 p-3 pt-1 rounded-2xl hover:cursor-pointer hover text-red-500 lg:text-xl" type="submit" value="Se connecter">

</form>

<%- include ('partials/footer') %>