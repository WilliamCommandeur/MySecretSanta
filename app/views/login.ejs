<%- include ('partials/header') %>

<form action="/login" method="POST" class="flex flex-col items-center w-1/2 bg-zinc-200 justify-around rounded-md text-xl">

    <% if (locals.error) { %>
        <div class="bg-red-200 border-2 border-red-500 p-3">
            <p class="text-red-500"><%= error %></p>
        </div>
    <% } %>

    <fieldset class="flex flex-col">
        <label for="email">Email</label>
        <input type="email" name="email" placeholder="email@domaine.com">
    </fieldset>

    <fieldset class="flex flex-col">
        <label for="password">Mot de passe</label>
        <input type="password" name="password" placeholder="********">
    </fieldset>

    <input class="bg-lime-300 p-3 pt-1 rounded-2xl hover:cursor-pointer hover:font-bold hover:scale-105 text-red-500" type="submit" value="Se connecter">

</form>

<%- include ('partials/footer') %>