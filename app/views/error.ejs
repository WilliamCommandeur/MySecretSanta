<%- include('partials/header') %>

<% if (locals.message) { %>
    <div class="flex flex-col items-center w-1/2 justify-around bg-zinc-200 rounded-md">
        <div class="w-full px-2">
        <p><%= message %></p>
        
        
        <% if (locals.stack) { %>
            <p class="text-sm">
                <%= stack %>
            </p>
            <% }%>
            
            
            
            <% if (locals.status === 404) { %>
                <img src="/img/404.png" alt="Page not found">
                <% } %>
            </div>
            <p><a href="/" class="w-96 text-2xl text-red-500 bg-lime-300 p-3 pt-1 rounded-2xl hover:cursor-pointer hover:font-bold hover:scale-105">Retour à l'accueil</a></p>
    </div>

<% } %>

<%- include('partials/footer') %>
