<%- include ('partials/header.ejs') %>

<div class="flex flex-col items-center  w-full sm:w-2/3 lg:w-1/3 bg-zinc-200 justify-around rounded-md overflow-auto" >
    
        <form  method="POST" class="text-center ">
            <div class="my-3 lg:text-xl">
                <label for="participantId" class="">Je suis :</label>
                <select name="participantId" id="">
                    <% for (participant of draw.participants) { %>
                        <option value="<%= participant.id %>"><%= participant.firstname %></option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="bg-lime-300 mt-5 p-3 pt-1 rounded-2xl hover:cursor-pointer hover:font-bold hover:scale-105 text-red-500 animate__animated animate__heartBeat animate__infinite">Voir mon tirage</button>
        </form>

</div>


