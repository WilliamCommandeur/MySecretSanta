<%- include ('partials/header') %>
    <% if (locals.user && !locals.draw) { %>

        <div class="flex flex-col items-center mb-2 w-full sm:w-2/3 lg:w-1/3 bg-zinc-200 justify-around rounded-md overflow-auto">
            <div class="w-full">
                <form action="/draw" method="POST" id="draw-form">
                    <div id="add-budget" class="text-center mt-10">
                        <fieldset class="px-8 text-l md:text-xl mt-2">
                            Votre budget : <input type="number" name="budget" class="w-20 p-1" min="0">
                            <button id="add-budget-button"
                                class="w-30 text-xl md:text-2xl text-red-500 bg-lime-300 p-3 ml-2 pt-1 rounded-2xl hover">Ok!</button>
                        </fieldset>

                        <div id="add-to-table">
                            <fieldset class="px-8 text-l md:text-xl mt-2">
                                <label for="participant"> Ajouter un participant : </label>
                                <input class="w-60 p-1" name="participant" type="text">
                                <button id="add-participant"
                                    class="w-30 text-xl md:text-2xl text-red-500 bg-lime-300 p-3 ml-2 pt-1 rounded-2xl hover">Ajouter</button>
                            </fieldset>
                        </div>
                    </div>
            </div>

            <div class="overflow-auto  w-5/6 h-full mt-10">
                <table class="w-full overflow-scroll bottom-0">
                    <thead class="w-30">
                        <tr class="text-center">
                            <th
                                class="h-2 text-lime-300 border-b border-l border-[#E8E8E8] bg-red-500 py-1 px-1 text-center text-base font-medium">
                                Participants :
                            </th>
                        </tr>
                    </thead>
                    <tbody id="t-body">
                        <tr></tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td id="budget-cell"
                                class="text-dark border-b border-l border-[#E8E8E8] bg-[#F3F6FF]  py-1 px-1 text-center text-base font-medium">
                                Budget : 
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <button type="submit"
                class="my-1 w-30 text-2xl text-red-500 bg-lime-300 p-3 pt-1 mb-5 rounded-2xl hover">Let's
                go !
            </button>
            </form>
        </div>

        <% } else if (locals.user && locals.draw) { %>

            <div class="flex flex-col items-center  w-full sm:w-2/3 lg:w-1/3 bg-zinc-200 justify-around rounded-md overflow-auto">
                <button
                    class="w-60 md:w-96 text-xl md:text-2xl text-red-500 bg-lime-300 p-1 md:p-3 rounded-2xl hover"><a
                        href="/result/<%= draw.id %>">Voir le résultat du tirage</a></button>
            </div>


            <% } else { %>

                <div class="flex flex-col items-center  w-full sm:w-2/3 lg:w-1/2 bg-zinc-200 justify-around rounded-md overflow-auto">
                    <p class="px-8 text-xl">
                        Vous devez vous identifier pour avoir accès à cette page..
                    </p>
                    <a href="/login"
                        class="w-30 text-2xl text-red-500 bg-lime-300 p-3 pt-1 rounded-2xl hover">
                        Se connecter
                    </a>
                </div>

            <% } %>

<%- include ('partials/footer') %>